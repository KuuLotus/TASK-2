<h1>Books</h1>
<table>
<%@books_list.each do |list|%>
 <thead>
  <tr>
   <th>Title</th>
   <th>Body</th>
   <th colspan="3"></th>
  </tr>
 </thead>
 <tbody>
  <tr>
   <td><%=list.title%></td>
   <td><%=list.body%></td>
   <td><%=link_to"Show",book_path(list)%></td>
   <td><%=link_to"Edit",edit_book_path(list)%></td>
   <td><%=link_to"Destroy",book_path(list),method: :delete,data:{confirm:"Are you sure?"} %></td>
  </tr>
 </tbody>
<%end%>
</table>

<h2>New Book</h2>
<%if @book.errors.any?%>
 <%=@book.errors.count%> errors prohibited this book from being saved:
　<ul>
　 <%@book.errors.full_messages.each do |message|%>
　  <li><%=message%></li>
　 <%end%>
　</ul>
<%end%>

<div class="new-book">
 <%=form_with model:@book,url:"/books",method: :post do |f|%>
</div>

<div class="field">
 <label>title</label>
 <%=f.text_field:title%>
</div>

<div class="field">
 <label>body</label>
 <%=f.text_area:body%>
</div>

<div class="actions">
 <%=f.submit"Create Book"%>
 <%end%>
</div>

